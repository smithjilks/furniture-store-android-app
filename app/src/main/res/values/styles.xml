<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.FurnitureStore.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:minHeight">@dimen/min_text_height</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
    </style>

    <style name="Widget.FurnitureStore.ItemTitleTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:minHeight">@dimen/min_text_height</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/primaryDarkColor</item>
        <item name="android:textAppearance">?attr/textAppearanceHeadline6</item>
    </style>

    <style name="Widget.FurnitureStore.ItemDescriptionTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:minHeight">@dimen/min_text_height</item>
        <item name="android:textColor">@color/primaryColor</item>
        <item name="android:textAppearance">?attr/textAppearanceSubtitle1</item>
    </style>

    <style name="Widget.FurnitureStore.ItemAmountTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:minHeight">@dimen/min_text_height</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/secondaryColor</item>
        <item name="android:textAppearance">?attr/textAppearanceSubtitle1</item>
    </style>



    <style name="Widget.FurnitureStore.CompoundButton.RadioButton" parent="Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="android:paddingStart">8dp</item>
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
    </style>
</resources>